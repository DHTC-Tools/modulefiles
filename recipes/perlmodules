install perl-CPAN-1.9402-130.el6_4.x86_64 rpm from yum
cpan
o conf mbuildpl_arg "--install_base /cvmfs/oasis.opensciencegrid.org/osg/modules/cpan/perl-5.10"
o conf makepl_arg "PREFIX=/cvmfs/oasis.opensciencegrid.org/osg/modules/cpan/perl-5.10"
o conf commit
export PERL5LIB=/cvmfs/oasis.opensciencegrid.org/osg/modules/cpan/perl-5.10/share/perl5/
